checkBox_variant(theme, defaultFill, defaultBorderColor, selectIconFill, selectFill, selectBorderColor, disabledFill, disabledBorderColor)
  .yt-checkBox__{theme}
    &.is-simple
      .yt-checkBox-core
        background-color transparent
        border-color transparent
        &::after
          border-color transparent

      .yt-checkBox-input
        &:checked + .yt-checkBox-core
          background-color transparent
          border-color transparent
          &::after
            border-color selectFill

    .yt-checkBox-core
      background-color defaultFill
      border-color defaultBorderColor
      &::after
        border-color selectIconFill

    .yt-checkBox-input
      &:checked + .yt-checkBox-core
        background-color selectFill
        border-color selectBorderColor
        &::after
          border-color selectIconFill

      &[disabled] + .yt-checkBox-core
        background-color disabledFill
        border-color disabledBorderColor

.yt
  &-checkList
    display: flex;
    flex-direction: column;
    background-color: #ffffff;

    &.is-limit
      .yt-checkBox-input + .yt-checkBox-core:not(:checked)
        background-color: #d9d9d9;
        border-color: #d9d9d9;

    &-title
      font-size: 14px;
      color: #666666;
      height: 30px;
      line-height: 30px;
      padding: 0 10px;
      background-color: #f9f9fb;

    &-wrapper
      flex: 1;

    &-row
      display flex
      align-items center
      box-sizing: border-box;
      line-height: 2;
      font-size: 14px;
      padding: 8px 12px;

  &-checkBox
    display inline-block
    vertical-align middle
    &.is-left
      margin-right 12px

    &.is-right
      margin-left 12px

    &-input
      display: none;
      &:checked + .yt-checkBox-core::after
        transform: rotate(45deg) scale(1);

    &-label
      flex 1
      vertical-align middle
      overflow: hidden;

    &-core
      position: relative;
      display: inline-block;
      vertical-align: middle;
      width: 20px;
      height: 20px;
      border-radius: 50%;
      border-width: 1px;
      border-style: solid;

      &::after
        position: absolute;
        content: " ";
        top: 4px;
        left: 7px;
        width: 4px;
        height: 8px;
        border-width: 0 2px 2px 0;
        border-style: solid;
        transform: rotate(45deg) scale(0);
        transition: transform .2s;
